all:
	@echo 'Usage:'
	@echo '  make debug                 ... for Linux with debug symbols'
	@echo '  make -f Makefile.linux     ... for Linux'
	@echo '  gmake -f Makfile.freebsd   ... for FreeBSD'
	@echo '  gmake -f Makfile.netbsd    ... for NetBSD'
	@echo '  gmake -f Makfile.openbsd   ... for OpenBSD'

debug:
	@make -f Makefile.linux-debug
