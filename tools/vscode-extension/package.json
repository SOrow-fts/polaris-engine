{
    "name": "polaris-engine-extension",
    "displayName": "Polaris Engine Extension",
    "description": "Polaris Engine Extension",
    "version": "0.0.3",
    "publisher": "ktabata",
    "repository": "https://github.com/ktabata/polaris-engine",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Snippets", "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "polaris-engine-scenario",
            "extensions": [
                ".txt"
            ],
            "aliases": [
                "Polaris Engine Scenario",
                "txt"
            ],
            "configuration": "./language-scenario.json"
        },
        {
            "id": "polaris-engine-gui",
            "extensions": [
                ".txt"
            ],
            "aliases": [
                "Polaris Engine GUI",
                "txt"
            ],
            "configuration": "./language-gui.json"
        },
        {
            "id": "polaris-engine-wms",
            "extensions": [
                ".txt"
            ],
            "aliases": [
                "Polaris Engine WMS",
                "txt"
            ],
            "configuration": "./language-wms.json"
        },
        {
            "id": "polaris-engine-anime",
            "extensions": [
                ".txt"
            ],
            "aliases": [
                "Polaris Engine Anime",
                "txt"
            ],
            "configuration": "./language-anime.json"
        }],
        "grammars": [
            {
            "language": "polaris-engine-scenario",
            "scopeName": "source-sc.txt",
            "path": "./syntaxes/polaris-engine-scenario.tmLanguage.json"
            },
            {
                "language": "polaris-engine-wms",
                "scopeName": "source-wms.txt",
                "path": "./syntaxes/polaris-engine-wms.tmLanguage.json"
            }
        ],
        "snippets": [{
            "language": "polaris-engine-scenario",
            "path": "./snippets-scenario.json"
        },
        {
            "language": "polaris-engine-gui",
            "path": "./snippets-gui.json"
        },
        {
            "language": "polaris-engine-wms",
            "path": "./snippets-wms.json"
        },
        {
            "language": "polaris-engine-anime",
            "path": "./snippets-anime.json"
        }]
    }
}
